extends ../layout/index

block content
    main.container.mt-5
        h1.text-center.mb-5 #{pageTitle}
        .row.upcoming-travels
            each travel in travels
                .col-md-6.col-lg-4.mb-4
                    .card
                        img.card-img-top(src=`/img/destiny_${travel.image}.jpg` class="img-fluid")
                        .card-body
                            h2=travel.title
                            p
                                i.far.fa-calendar-alt
                                |  Departure: #{travel.departure_date} - Return: #{travel.return_date}
                            p
                                i.fas.fa-dollar-sign
                                |  #{travel.price}
                            p=travel.description.substr(0, 100)
                            a(href=`travels/${travel.id}`, class="btn btn-success btn-block p-2") View Trip
                